{
  "name": "telegram-mood-tracker",
  "version": "1.0.0",
  "description": "Telegram bot for mood and state tracking",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "sync": "ts-node src/models/sync.ts",
    "migrate:users": "ts-node src/models/migrateUsers.ts",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "db:restart": "docker-compose restart",
    "db:logs": "docker-compose logs -f",
    "db:logs-mongo": "docker-compose logs -f mongodb",
    "db:shell": "docker-compose exec mongodb mongosh -u admin -p password123 --authenticationDatabase admin mood_tracker",
    "db:backup": "docker-compose exec -T mongodb mongodump --uri=\"mongodb://admin:password123@localhost:27017/mood_tracker?authSource=admin\" --archive --gzip > backup/backup_$(date +%Y%m%d_%H%M%S).gz",
    "db:restore": "docker-compose exec -T mongodb mongorestore --uri=\"mongodb://admin:password123@localhost:27017/mood_tracker?authSource=admin\" --archive --gzip <"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "grammy": "^1.20.3",
    "moment": "^2.29.4",
    "moment-timezone": "^0.6.0",
    "mongodb": "^5.8.1"
  },
  "devDependencies": {
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.8.6",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
